  	function saveCustomForm(){
		var baseUrl = '<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_LINK); ?>';
		var loading = $('customsizeloading');
      	var error = $('customsizeloadingerror');
		var fullname = $('full_name').value;var email = $('email_id').value;
		if(fullname == ''){alert('Please enter full name.');return false;}
		else if(email == ''){alert('Please enter correct email id.');return false;}
		else{ 
	      	error.hide();loading.show();
	        var form = $('measurement_form');
	        var url = baseUrl+'customsize/index/customsizesave';
	        new Ajax.Request(url, {
	        	parameters: form.serialize(true),
	        	method: 'POST',
	        	onComplete: function(transport) {
	        		if(transport.status == 200) {
	        			var result = transport.responseText;
	        			if(result!='SUCESS') {
	                        loading.hide();error.update('There is some problem to submit the records.');error.show();
	                    } else {
	                    	loading.hide();error.update('Your detail has been submitted.');error.show();
	                    }
	        		}
	        	}
	        });
		}
	}
  	$('CustomsizeData').observe('click', saveCustomForm);

  	function loaddata(){
  		var baseUrl = '<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_LINK); ?>';
		var loading = $('size_name_loading');
      	var error = $('size_name_loading_error');
		var emailid = $('email_id').value;
		
		if(emailid == ''){
			alert('Please Enter valid Email Address');
			$('email_id').focus();
			return false;
		}else{
			error.hide();
	        loading.show();
	        var sizeloaddata = $('sizeloaddata');
	        var form = $('measurement_form');
	        var url = baseUrl+'customsize/index/loadstoresize';
	        new Ajax.Request(url, {
	        	parameters: form.serialize(true),
	        	method: 'POST',
	        	onComplete: function(transport) {
	        		if(transport.status == 200) {	
	        			var result = transport.responseText;
	        			if(result == '') {
	                        loading.hide();
	                        error.update(result.error);
	                        error.show();
	                    } else {
	                        loading.hide();
	                        sizeloaddata.show();
	                        sizeloaddata.update(result);
	                    }
	        		}
	        	}
	        });
		}
  	}
	$('select_stored_size').observe('click', loaddata);
  	
